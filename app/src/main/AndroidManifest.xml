<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puddingvideoproject" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name="com.puddingvideo.Activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.puddingvideo.Activity.WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name="com.puddingvideo.Activity.ActivitySearch"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.puddingvideo.Activity.ActivityTime"
            android:label="@string/title_activity_activity_time" >
        </activity>
        <activity
            android:name="com.puddingvideo.Activity.ActivityCyber"
            android:label="@string/title_activity_activity_cyber" >
        </activity>
        <activity
            android:name="com.puddingvideo.Activity.ActivityMine"
            android:label="@string/title_activity_activity_mine" >
        </activity>
        <activity
            android:name="com.puddingvideo.Activity.Activity_ShowHeader"
            android:label="@string/title_activity_activity__show_header" >
        </activity>
    </application>

</manifest>
